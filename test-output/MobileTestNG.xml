<?xml version="1.0" encoding="UTF-8"?>

<suite name="Suite" verbose="10" parallel="tests" thread-count="6">
	<!-- Reportng的监听器 -->
	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
	</listeners>

	<!-- 第一个手机的测试用例 -->
	<test name="Motorola_X_Index">
		<!-- 手机的platformVersion -->
		<parameter name="platformVersion" value="5.1" />
		<!-- appium端口号 -->
		<parameter name="port" value="6666" />
		<!-- 手机的udid -->
		<parameter name="udid" value="TA09003XW3" />
		<classes>
			<class name="jiankun.com.xiaoyou.cases.XiaoYouIndex" />
		</classes>
	</test>


